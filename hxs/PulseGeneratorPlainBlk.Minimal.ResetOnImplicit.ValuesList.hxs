namespace eccelerators.tutorial
{
	block PulseGeneratorPlainBlk
	{
		Registers = [ControlReg];
		register ControlReg
		{
			Bits = [
				PulseWidthNs,
				Operation
			];
			data PulseWidthNs
			{
				Width = 24;
				Resets = [
					BusReset.Async( Value = 5000000)
				];
			}
				
			enum Operation
			{
				Width = 1;
				Values = [
					On,
					Off
				];
				value Off
				{
					Value = 0b0;
				}
				value On
				{
					Value = 0b1;
				}
			}			
		}
	}
}
